@page
@model RegisterModel
@{
    ViewData["Title"] = "Yeni hesap oluştur.";
}



<div class="row">
    <div class="col-md-4" style=" margin: 0 0 0 30%;">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 style="width: 100%; text-align:center;">@ViewData["Title"]</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">E-posta adresi</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Parola</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Parola (tekrar)</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Kaydol</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
